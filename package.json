		"@tauri-apps/cli": "^2.9.5",
		"@types/bun": "^1.3.3",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"@types/react": "~19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"babel-plugin-react-compiler": "^1.0.0",
