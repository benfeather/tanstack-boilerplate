{
	"name": "workspace",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo --filter native dev",
		"dev:web": "turbo --filter web dev",
		"dev:server": "turbo --filter server dev",
		"db:push": "turbo --filter @workspace/db db:push",
		"db:studio": "turbo --filter @workspace/db db:studio",
		"db:generate": "turbo --filter @workspace/db db:generate",
		"db:migrate": "turbo --filter @workspace/db db:migrate",
		"db:start": "turbo --filter @workspace/db db:start",
		"db:watch": "turbo --filter @workspace/db db:watch",
		"db:stop": "turbo --filter @workspace/db db:stop",
		"db:down": "turbo --filter @workspace/db db:down"
	},
